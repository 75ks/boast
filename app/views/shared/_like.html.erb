<% unless Favorite.find_by(user_id: current_user.id, post_id: post.id) %>
  <%= link_to post_favorites_path(post.id), method: :post, remote: true do %>
    <i class="far fa-heart like-btn"></i>
  <% end %>
<% else %>
  <%= link_to post_favorite_path(post.id, current_user.id), method: :delete, remote: true do %>
    <i class="fas fa-heart unlike-btn"></i>
  <% end %>
<% end %>
<span class="heart-count" id="heart" data-id=<%= post.id %>>
  <%= Favorite.where(post_id: post.id).count %>
</span>