<header class="top-page-header">
  <%= link_to root_path do %>
    <h2 class="boast">
      Boast
    </h2>
  <% end %>
  <div class="nav">
    <ul class="lists-right">
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, user_path(current_user.id), class: "list-left" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "list-right" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "list-left" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "list-right" %></li>
      <% end %>
    </ul>
  </div>
</header>