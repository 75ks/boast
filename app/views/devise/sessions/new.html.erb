<%= render "shared/header"%>

<div class="contents">
  <div class="container row">
    <%= form_with model: @user, url: user_session_path, class:"form-size", local: true do |f| %>
      <h3 class="new-content">ログイン</h3>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email, class:"user-field", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password, class:"user-field", placeholder:"6文字以上の半角英数字" %>
      </div>
      <div class="btn-center">
        <%= f.submit "ログインする", class:"user-btn btn" %>
      </div>

    <% end %>
  </div>
</div>